{
  "manifest_version": 3,
  "name": "YouTube \u2192 ChatGPT Transcript Sender (Free)",
  "version": "1.0.1",
  "description": "Adds a button near YouTube's volume bar to copy the transcript + your custom instructions and open ChatGPT. No API keys.",
  "permissions": ["storage", "clipboardWrite", "scripting", "activeTab"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://*.youtube.com/*",
    "https://r*.youtube.com/*",
    "https://*.googlevideo.com/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [{
    "matches": ["https://www.youtube.com/*"],
    "js": ["contentScript.js"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }],
  "action": { "default_title": "YT \u2192 ChatGPT", "default_popup": "popup.html" },
  "icons": { "16": "icons/icon16.png", "48": "icons/icon48.png", "128": "icons/icon128.png" },
  "options_page": "options.html"
}
